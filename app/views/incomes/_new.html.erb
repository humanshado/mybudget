<%= form_for(@incomes.build) do |f| %>
  <%= f.date_field :entry_date, class: 'date-input form-input', placeholder: 'date' %>
  <%= f.text_field :description, class: 'desc-input form-input', placeholder: 'description' %>
  <%= f.number_field :inflow, :step => 0.01, class: 'amount-input form-input', placeholder: 'enter amount' %>
  <%= f.submit '+' %>
<% end %>