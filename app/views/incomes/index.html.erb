<div class="form-wrapper">
    <%= render "new" %>
</div>

<div class="budget-table">
    <h5 class="income-figures">INCOME</h5>
    <table>
        <tr>
            <th>Date</th>
            <th>Description</th>
            <th>Amount</th>
        </tr>
        <% @incomes.each do |income| %>
            <tr>
                <td><%= income.entry_date %></td>
                <td><%= income.description %></td>
                <td class="income-figures">+ <%= number_to_currency(income.inflow) %></td>
            </tr>
        <% end %>
    </table>
</div>
