<div class="form-wrapper">
    <%= render "new" %>
</div>

<div class="budget-table">
    <h5>EXPENSE</h5>
    <table>
        <tr>
            <th>Date</th>
            <th>Description</th>
            <th>Amount</th>
        </tr>
        <% @expenses.each do |expense| %>
            <tr>
                <td><%= expense.entry_date %></td>
                <td><%= expense.description %></td>
                <td><%= number_to_currency(expense.outflow) %></td>
            </tr>
        <% end %>
    </table>
  </div>