<div class="form-wrapper">
    <%= render "expenses/new" %>
</div>

<div class="budget-table">
    <h5 class="expenses-figures">EXPENSE</h5>
    <table>
        <tr>
            <th>Date</th>
            <th>Description</th>
            <th>Amount</th>
        </tr>
        <% current_user.expenses.each do |expense| %>
            <tr>
                <td><%= expense.entry_date %></td>
                <td><%= expense.description %></td>
                <td class="expenses-figures">- <%= number_to_currency(expense.outflow) %></td>
            </tr>
        <% end %>
    </table>
  </div>